<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editProfile.EditPatientProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background1"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/name_profile"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/editPName"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editPName" />

            <EditText
                android:id="@+id/editPName"
                android:layout_width="207dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView23"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/contact_profile"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView18"
                app:layout_constraintEnd_toStartOf="@+id/editPPhone"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView18"
                app:layout_constraintTop_toTopOf="@+id/editPPhone" />

            <EditText
                android:id="@+id/editPPhone"
                android:layout_width="207dp"
                android:layout_height="40dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/contact_no"
                android:inputType="phone"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/editPName"
                app:layout_constraintTop_toBottomOf="@+id/editPName"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/dob_profile"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView19"
                app:layout_constraintStart_toStartOf="@+id/textView19"
                app:layout_constraintTop_toTopOf="@+id/editPDob" />

            <EditText
                android:id="@+id/editPDob"
                android:layout_width="207dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/date_of_birth"
                android:inputType="date"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/editPPhone"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/editPPhone"
                app:layout_constraintTop_toBottomOf="@+id/editPPhone"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/gender_profile"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView20"
                app:layout_constraintHorizontal_bias="0.416"
                app:layout_constraintStart_toStartOf="@+id/textView20"
                app:layout_constraintTop_toTopOf="@+id/radioGroup" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="@string/family_info"
                android:textColor="@color/purple_700"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/personal_info"
                android:textColor="@color/purple_700"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="6dp"
                android:text="@string/father_profile"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editPFather" />

            <EditText
                android:id="@+id/editPFather"
                android:layout_width="207dp"
                android:layout_height="40dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/father_name"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView22"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/mother_profile"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView24"
                app:layout_constraintStart_toStartOf="@+id/textView24"
                app:layout_constraintTop_toTopOf="@+id/editPMother" />

            <EditText
                android:id="@+id/editPMother"
                android:layout_width="207dp"
                android:layout_height="40dp"
                android:layout_marginTop="38dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/mother_name"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/editPFather"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/editPFather"
                app:layout_constraintTop_toBottomOf="@+id/editPFather"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/address_profile"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView25"
                app:layout_constraintStart_toStartOf="@+id/textView25"
                app:layout_constraintTop_toTopOf="@+id/editPFamily" />

            <EditText
                android:id="@+id/editPFamily"
                android:layout_width="207dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/address"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/editPMother"
                app:layout_constraintStart_toStartOf="@+id/editPMother"
                app:layout_constraintTop_toBottomOf="@+id/editPMother"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/doctor_profile"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView26"
                app:layout_constraintStart_toStartOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/textView26"
                app:layout_constraintTop_toTopOf="@+id/editPDoctor" />

            <EditText
                android:id="@+id/editPDoctor"
                android:layout_width="207dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/doc_name"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/editPFamily"
                app:layout_constraintStart_toStartOf="@+id/editPFamily"
                app:layout_constraintTop_toBottomOf="@+id/editPFamily" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="218dp"
                android:layout_height="34dp"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="@+id/editPDob"
                app:layout_constraintStart_toStartOf="@+id/editPDob"
                app:layout_constraintTop_toBottomOf="@+id/editPDob">

                <RadioGroup
                    android:id="@+id/editNurseGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/editPMale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/purple_700"
                        android:paddingEnd="4dp"
                        android:shadowColor="@color/purple_500"
                        android:text="@string/radio_male"
                        tools:ignore="TouchTargetSizeCheck" />

                    <RadioButton
                        android:id="@+id/editPFemale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/purple_700"
                        android:paddingEnd="4dp"
                        android:shadowColor="@color/purple_500"
                        android:text="@string/radio_female"
                        tools:ignore="TouchTargetSizeCheck" />

                    <RadioButton
                        android:id="@+id/editPOther"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:buttonTint="@color/purple_700"
                        android:shadowColor="@color/purple_500"
                        android:text="@string/radio_other"
                        tools:ignore="TouchTargetSizeCheck" />
                </RadioGroup>
            </RadioGroup>

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/hos_profile"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/editPDoctor"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView27"
                app:layout_constraintTop_toTopOf="@+id/editPHospital" />

            <EditText
                android:id="@+id/editPHospital"
                android:layout_width="207dp"
                android:layout_height="40dp"
                android:layout_marginTop="38dp"
                android:layout_marginBottom="52dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="@string/hospital"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/editPUpdate"
                app:layout_constraintEnd_toEndOf="@+id/editPDoctor"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/editPDoctor"
                app:layout_constraintTop_toBottomOf="@+id/editPDoctor" />

            <Button
                android:id="@+id/editPUpdate"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="52dp"
                android:layout_marginBottom="28dp"
                android:text="@string/update_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editPHospital" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>